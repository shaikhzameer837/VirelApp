<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:background="@drawable/red_round_corner"
    android:elevation="8dp"
    android:orientation="vertical"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
    app:behavior_hideable="false"
    app:behavior_peekHeight="356dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:enabled="false"
            android:gravity="center_horizontal"
            android:lines="1"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:paddingRight="25dp"
            android:paddingBottom="50dp"
            android:singleLine="true"
            android:text="Recent Chat"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/grey_black"
            android:textSize="12sp"
            android:textStyle="bold" />
        <ImageView android:id="@+id/newChat"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/forum_plus_outline"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="-40dp"
        android:background="@drawable/background_with_shadow"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/login"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:lottie_autoPlay="true"
                app:lottie_fileName="chat.json"
                app:lottie_loop="true" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fMessage"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/appColor"
                android:drawableLeft="@drawable/forum_plus_outline"
                android:drawableRight="@drawable/arrow_right"
                android:text="Start Your first Message"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                app:cornerRadius="10dp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" />
    </LinearLayout>
</LinearLayout>