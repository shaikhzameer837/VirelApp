<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/border_round"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text=" 12th 08 202 9m pubg"
            android:padding="10dp"
            android:id="@+id/pinfo"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/clock"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:background="#c0c0c0"
            android:layout_marginTop="5dp"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#fafafa"
            android:layout_margin="1dp"
            android:padding="10dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:scaleType="center"
                android:background="@drawable/card"
                android:layout_height="50dp"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_margin="5dp"
                android:text="All transcation are made confidential and cannot be reversed or transfered to any other accounts"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#c0c0c0"
            android:layout_marginTop="5dp"
            android:layout_height="1dp"/>
        <TextView
            android:layout_width="match_parent"
            android:text="Transcation id:- 1234564584556655"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/transaction"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>