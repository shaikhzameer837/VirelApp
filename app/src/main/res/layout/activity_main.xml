<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cod"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#efefef">


         <LinearLayout
             android:layout_width="match_parent"
             android:background="#ebecef"
             android:orientation="vertical"
             android:layout_height="match_parent">
             <fragment
                 android:id="@+id/youtubeFragment"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:name="com.google.android.youtube.player.YouTubePlayerFragment">
             </fragment>
             <androidx.viewpager.widget.ViewPager
                 android:id="@+id/view_pager"
                 android:visibility="gone"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent" />
             <TextView
                 android:layout_width="wrap_content"
                 android:text="online"
                 android:visibility="gone"
                 android:layout_gravity="center_horizontal"
                 android:drawableLeft="@drawable/online"
                 android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@drawable/border_round"
        android:layout_margin="5dp"
        android:padding="10dp"
         android:layout_height="wrap_content">

        <TextView android:id="@+id/timeLeft"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:text="Play game for free and earn 500Rs real cash"
            android:layout_height="wrap_content"/>
        <TextView android:id="@+id/roomId"
            android:layout_width="wrap_content"
            android:text="Room id:-"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/timeLeft"
            android:layout_height="wrap_content"/>
        <TextView android:id="@+id/roomPassword"
            android:layout_width="wrap_content"
            android:text="Password:-"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/roomId"
            android:layout_height="wrap_content"/>
       <TextView android:id="@+id/gameName"
            android:layout_width="wrap_content"
            android:text="Game:- pubg"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/roomPassword"
            android:layout_height="match_parent"/>
    </RelativeLayout>
         </LinearLayout>
        <include layout="@layout/bottom_sheet" />
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"
            app:elevation="16dp"
            app:labelVisibilityMode="labeled"
            app:itemHorizontalTranslationEnabled="false"
            app:itemIconTint="@color/nav_color"
            app:itemTextColor="@color/nav_color"
            app:menu="@menu/bottom_navigation_menu"  />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>