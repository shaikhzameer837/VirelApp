<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:layout_width="match_parent">

    <RelativeLayout android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/curved_white"
        android:clickable="true"
        android:orientation="horizontal"
         android:paddingBottom="8dp">
        <TextView
            android:layout_width="match_parent"
            android:text="title"
            android:padding="10dp"
            android:background="@drawable/curved_drawable"
            android:id="@+id/textId"
            android:layout_height="wrap_content"/>

        <EditText android:id="@+id/gameId"
            android:layout_width="match_parent"
             android:hint="Enter your id"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/textId"
            android:layout_height="wrap_content"/>
        <TextView android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:layout_below="@+id/gameId"
            android:text="Players are responsible if found suspious or malicious no cheating are allowed or using 3rd party apps While playing game you need to keep this app running in background by clicking Pre-booking you agree our all terms and conditions"
            android:textColor="#737373"
            android:textSize="16sp" />

    </RelativeLayout>
    <Button
        android:id="@+id/books"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/lin"
         android:background="@drawable/curved_drawable"
        android:text="Pre - Book"
        android:textColor="@color/black" />
</RelativeLayout>