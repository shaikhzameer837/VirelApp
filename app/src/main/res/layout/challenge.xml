<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:background="@drawable/red_round_corner"
    android:elevation="8dp"
    android:orientation="vertical"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
    app:behavior_hideable="false"
    app:behavior_peekHeight="356dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:enabled="false"
        android:gravity="center_horizontal"
        android:imeOptions="actionDone"
        android:lines="1"
        android:paddingTop="15dp"
        android:singleLine="true"
        android:text="Challenges (Coming Soon)"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/grey_black"
        android:textSize="12sp"
        android:textStyle="bold" />
    <ScrollView
        android:layout_marginTop="-40dp"
        android:background="@drawable/background_with_shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <com.skydoves.androidribbon.RibbonLayout
                android:id="@+id/ribbonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ribbonLayout_bottom_align="right"
                app:ribbonLayout_header_align="left">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?attr/selectableItemBackground">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="6dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/background01" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Challenge 1"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:padding="10dp"
                            android:background="#80000000"
                            android:layout_height="wrap_content"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </com.skydoves.androidribbon.RibbonLayout>

            <com.skydoves.androidribbon.RibbonLayout
                android:id="@+id/ribbonLayout01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ribbonLayout_bottom_align="center"
                app:ribbonLayout_header_align="left">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="6dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/background02" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Challenge 2"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:padding="10dp"
                            android:background="#80000000"
                            android:layout_height="wrap_content"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </com.skydoves.androidribbon.RibbonLayout>

            <com.skydoves.androidribbon.RibbonLayout
                android:id="@+id/ribbonLayout02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ribbonLayout_bottom_align="left"
                app:ribbonLayout_header_align="right">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="6dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/background03" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Challenge 3"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:padding="10dp"
                            android:background="#80000000"
                            android:layout_height="wrap_content"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </com.skydoves.androidribbon.RibbonLayout>
        </LinearLayout>
    </ScrollView>


