<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#240B36"
                android:startColor="#AD5389"
                android:type="linear" />
            <stroke
                android:width="1dp"
                android:color="#ffffff" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <corners
                android:topLeftRadius="25dp"
                android:topRightRadius="25dp" />
        </shape>
    </item>
</layer-list>